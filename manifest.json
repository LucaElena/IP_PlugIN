{
	"manifest_version": 2,
	"name": "PostIT Plugin",
	"description": "This extension allow you to post in same time on multiple social media accounts",
	"version": "0.5",

	"content_scripts": [
						{
						"matches": ["https://*/*"],
						"css": ["main.css"],
						"js": ["content.js"]
						}
						],
	"background":{
					"scripts": ["background.js"]
	},
	"permissions": ["tabs","storage","*://sma-a4.herokuapp.com/*","*://web-rfnl5hmkocvsi.azurewebsites.net/*","*://api.imgur.com/*"],
        
	"browser_action": {
					"default_icon": "img.png",
					"default_popup": "popup.html"			
    }
}
