{
	"manifest_version": 2,
	"name": "PostIT Plugin",
	"description": "This extension allow you to post in same time on multiple social media accounts",
	"version": "0.3",

	"content_scripts": [
						{
						"matches": ["https://*/*"],
						"css": ["main.css"],
						"js": ["content.js"]
						}
						],
	"background":{
					"scripts": ["background.js"]
	},
	"permissions": ["tabs","storage"],

	"browser_action": {
					"default_icon": "img.png",
					"default_popup": "popup.html"			
    },
	"content_security_policy": "script-src 'self' https://connect.facebook.net https://platform.linkedin.com ; object-src 'self'"
}
